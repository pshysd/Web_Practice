<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>

	<entry key="selectNoticeList">
		SELECT NOTICE_NO,
		NOTICE_TITLE,
		USER_ID,
		COUNT,
		CREATE_DATE
		FROM NOTICE N, MEMBER M
		WHERE N.NOTICE_WRITER = M.USER_NO
		AND N.STATUS = 'Y'
		ORDER BY NOTICE_NO DESC
	</entry>
	<entry key="insertNotice">
		INSERT INTO NOTICE(NOTICE_NO,
		NOTICE_TITLE,
		NOTICE_CONTENT,
		NOTICE_WRITER)
		VALUES (SEQ_NNO.NEXTVAL,
		?,
		?,
		?)
	</entry>

	<entry key="increaseCount">
		UPDATE NOTICE
		SET COUNT = COUNT + 1
		WHERE NOTICE_NO = ?
		AND STATUS = 'Y'
	</entry>

	<entry key="selectNotice">
		SELECT NOTICE_NO,
			   NOTICE_TITLE,
			   NOTICE_CONTENT,
			   NOTICE_WRITER,
			   CREATE_DATE
		FROM NOTICE
		WHERE NOTICE_NO = ?
		AND STATUS = 'Y'
	</entry>
</properties>
